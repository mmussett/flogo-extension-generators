{
	"title": "${{values.triggerName}} Trigger",
	"name": "${{values.triggerName}}",
	"author": "Created by Flogo Extension Generator",
	"version": "1.2.2",
	"type": "flogo:trigger",
	"display": {
		"description": "${{values.triggerName}} trigger",
		"category": "${{values.category}}",
		"visible": true,
		"smallIcon": "icons/trigger-icon@2x.png",
		"largeIcon": "icons/trigger-icon@3x.png"
	},
	"ref": "github.com/${{values.owner}}/flogo-enterprise-hub/extensions/${{values.extensionName}}/trigger/${{values.triggerName}}",
	"settings": [],
	"handler": {
		"settings": [
{%- if(values.hasSettingsString === 'yes') %}
			{
                "name": "aSettingString",
                "type": "string",
                "display": {
                    "name": "String",
				    "description": "This description appears on tooltip hover.",
					"required": true,
                    "type": "string",
                    "appPropertySupport": true
                },
                "value": ""
            }
{%- endif %}			
{%- if(values.hasSettingsString === 'yes' and (values.hasSettingsBoolean === 'yes' or values.hasSettingsDropdown === 'yes' or values.hasSettingsDateTime === 'yes' or values.hasSettingsInteger === 'yes' or values.hasSettingsNumber === 'yes')) %}
			,
{%- endif %}
{%- if(values.hasSettingsBoolean === 'yes') %}
			{
				"name": "aSettingBoolean",
				"type": "boolean",
				"display": {
					"name": "Boolean",
					"description": "This description appears on tooltip hover."
				},
				"value": false,
				"required": true
			}
{%- endif %}
{%- if(values.hasSettingsBoolean === 'yes' and (values.hasSettingsDropdown === 'yes' or values.hasSettingsDateTime === 'yes' or values.hasSettingsInteger === 'yes' or values.hasSettingsNumber === 'yes')) %}       
        ,
{%- endif %}        
{%- if(values.hasSettingsDropdown === 'yes') %}
			{
                "name": "aSettingStringDropdown",
                "type": "string",
                "required": true,
                "display": {
                    "name": "Dropdown Options",
                    "description": "This description appears on tooltip hover.",
                    "type": "dropdown",
                    "selection": "single"
                },
                "value": "Timer",
                "allowed": [
                    "Option 1",
                    "Option 2",
					"Option 3"
                ]
            }
{%- endif %}
{%- if(values.hasSettingsDropdown === 'yes' and (values.hasSettingsDateTime === 'yes' or values.hasSettingsInteger === 'yes' or values.hasSettingsNumber === 'yes')) %}       
			,
{%- endif %} 
{%- if(values.hasSettingsDateTime === 'yes') %}       
			{
				"name": "aSettingDateTime",
				"type": "string",
				"display": {
					"name": "Date Time",
					"type": "dateTime",
					"description": "This description appears on tooltip hover.",
					"appPropertySupport": true
				}
			}
{%- endif %}
{%- if(values.hasSettingsDateTime === 'yes' and (values.hasSettingsInteger === 'yes' or values.hasSettingsNumber === 'yes')) %}       
			,
{%- endif %} 
{%- if(values.hasSettingsInteger === 'yes') %}       
			{
				"name": "aSettingInteger",
				"type": "integer",
				"display": {
					"name": "Integer",
					"description": "This description appears on tooltip hover.",
					"appPropertySupport": true
				},
				"value": 1,
				"required": true
			}
{%- endif %}
{%- if(values.hasSettingsInteger === 'yes' and (values.hasSettingsNumber === 'yes')) %}       
			,
{%- endif %}
{%- if(values.hasSettingsNumber === 'yes') %}       
       	 	{
            	"name": "aSettingNumber",
            	"type": "number",
				"display": {
					"name": "Numeric",
					"description": "This description appears on tooltip hover.",
					"appPropertySupport": true
				},
				"value": 1.0,
            	"required": true
        	}
{%- endif %}
		]
	}
}